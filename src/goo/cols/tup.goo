(use goo/boot)
(use goo/macros)
(use goo/types)
(use goo/cols/col)
(use goo/cols/seq)
(use goo/cols/flat)

;; 3.7.6.1 TUPLES

;;;;!! Interface
(exported
 ;; Defined in boot
 <tup>
 tup
)

;;;;!! Implementation

(dm as ((_ (t= <tup>)) x|<tup> => <tup>) x)

;;;; Collection protocol
(dm len (x|<tup> => <int>)
  (%ib (%tlen x)))

(dm elt-or (x|<tup> i|<int> default => <any>)
  (if (range-check? x i)
      (%telt x (%iu i)) ;; TODO: LOW-ELT
      default))

;; (dm elt-setter (z x|<tup> i|<int>)
;;   (range-check x i)
;;   (set (%telt x (%iu i)) z)) ;; TODO: LOW-ELT

(dm empty (c|(t= <tup>) => <tup>)
  %tnul)

(dm fab (x|(t= <tup>) s|<int> => <tup>)
  (%tup (%iu s) #f))


;;;; Misc stuff

(dm to-str (x|<tup> => <str>)
  (cat "#(" (vals-to-str x) ")"))

;;;; Undocumented
(dm low-elt (x|<tup> i|<int> => <any>)
  (%telt x (%iu i)))

(dm fab-elt-setter (z x|<tup> i|<int>)
  (set (%telt x (%iu i)) z))
